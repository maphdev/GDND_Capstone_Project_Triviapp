<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margins"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:background="@color/colorAccent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/categories_adapter_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_size"
            android:scaleType="centerCrop"
            android:background="@color/light_background"
            android:contentDescription="@string/picture_category"/>

        <TextView
            android:id="@+id/categories_adapter_item_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            style="@style/Title_Category" />

    </LinearLayout>


</android.support.v7.widget.CardView>